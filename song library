  0
  0
  0
  0
  B6
  0
  D7
  0
  E7
  0
  C7
]
elevator music = [
  
]
song = [
  0
]

#code to plays the song
while True: 
  if signal_intake.value() == 1:
    for i in song:  #plays "song" can be replaced with other songs like "school bell"
      if i == 0:
        buzzer.duty_u16(0)  
      else:  
        buzzer.freq(i)   
        buzzer.duty_u16(32768)  
      utime.sleep(0.15)
