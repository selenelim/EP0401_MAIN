C8 = 4186

signal_intake = Pin(15, Pin.IN, Pin.PULL_DOWN)
output = Pin(0, Pin.OUT)
buzzer = PWM2(output)
buzzer.duty_u16(0)
buzzer.freq(300)
#all the different sound 
correct = [
  C6
  C7
]

incorrect = [
  C7
  C6
]

School_bell = [
  E7
  0
